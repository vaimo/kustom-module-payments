<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="KlarnaPaymentsPlacingOrderWithNonKlarnaPaymentMethodWhenKlarnaPaymentsIsDisabledTest" extends="KlarnaPaymentsPlacingOrderWithNonKlarnaPaymentMethodTest">
        <annotations>
            <features value="Klarna Payments"/>
            <stories value="Placing order with non-Klarna method when KP is disabled"/>
            <title value="Placing order with non-Klarna method when KP is disabled"/>
            <description value="IPlacing order with non-Klarna method when KP is disabled"/>
            <severity value="CRITICAL"/>
            <testCaseId value="KP_NON_KP_DISABLED"/>
            <group value="Klarna_KP"/>
        </annotations>
        <before>
            <magentoCLI command="config:set payment/klarna_kp/active 0" stepKey="disableKlarnaPayment"/>
            <magentoCLI command="cache:clean" stepKey="cacheCleanBefore"/>
        </before>
        <after>
            <magentoCLI command="config:set payment/klarna_kp/active 1" stepKey="enableKlarnaPayment"/>
            <magentoCLI command="cache:clean" stepKey="cacheCleanAfter"/>
        </after>
    </test>
</tests>